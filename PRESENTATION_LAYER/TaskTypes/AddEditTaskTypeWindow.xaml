<Window x:Class="PRESENTATION_LAYER.AddEditTaskTypeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dothem"
        Height="520"
        Width="320"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#FF1E1E2F"
        Icon="/App_Icon.png"
        Opacity="0.98">

    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="240">

            <!-- Title -->
            <TextBlock Text="Task Type"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,25"/>

            <!-- Name -->
            <StackPanel Margin="0,0,0,12">
                <TextBlock Text="Task Type Name"
                           Foreground="White"
                           FontSize="13"
                           Margin="0,0,0,4"/>
                <Border CornerRadius="6"
                        Background="#FF2B2B50"
                        Padding="1">
                    <TextBox x:Name="tbName"
                             Height="28"
                             Background="#FF2B2B50"
                             Foreground="White"
                             BorderThickness="0"
                             Padding="6"
                             MaxLength="50"/>
                </Border>
            </StackPanel>

            <!-- Description -->
            <StackPanel Margin="0,0,0,12">
                <TextBlock Text="Description"
                           Foreground="White"
                           FontSize="13"
                           Margin="0,0,0,4"/>
                <Border CornerRadius="6"
                        Background="#FF2B2B50"
                        Padding="1">
                    <TextBox x:Name="tbDescription"
                             Height="70"
                             Background="#FF2B2B50"
                             Foreground="White"
                             BorderThickness="0"
                             Padding="6"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             MaxLength="150"/>
                </Border>
            </StackPanel>

            <!-- Color -->
            <StackPanel Margin="0,0,0,12">
                <TextBlock Text="Color (Hex or Name)"
                           Foreground="White"
                           FontSize="13"
                           Margin="0,0,0,4"/>
                <Border CornerRadius="6"
                        Background="#FF2B2B50"
                        Padding="1">
                    <TextBox x:Name="tbColor"
                             Height="28"
                             Background="#FF2B2B50"
                             Foreground="White"
                             BorderThickness="0"
                             Padding="6"
                             MaxLength="20"
                             ToolTip="Example: #FF4C6EF5 or Red"/>
                </Border>
            </StackPanel>

            <!-- Date Of Creation -->
            <StackPanel Margin="0,0,0,15">
                <TextBlock Text="Date Of Creation"
                           Foreground="White"
                           FontSize="13"
                           Margin="0,0,0,4"/>
                <Border CornerRadius="6"
                        Background="#FF2B2B50"
                        Padding="1">
                    <TextBox x:Name="tbDateOfCreation"
                             Height="28"
                             Background="#FF2B2B50"
                             Foreground="#FFAAAAAA"
                             BorderThickness="0"
                             Padding="6"
                             IsReadOnly="True"/>
                </Border>
            </StackPanel>

            <!-- Save Button -->
            <Button x:Name="btnSave"
                    Content="Save"
                    Height="34"
                    FontSize="15"
                    FontWeight="Bold"
                    Background="#FF4C6EF5"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="btnSave_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#FF4C6EF5"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="8">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF6D85FF"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

        </StackPanel>
    </Grid>
</Window>