<Window x:Class="PRESENTATION_LAYER.TaskTypes.AddEditTaskTypeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dothem"
        Height="520"
        Width="320"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{DynamicResource WindowBackgroundBrush}"
        Icon="/App_Icon.png"
        Opacity="0.98">

    <!-- Use ResourceDictionary -->
    <Window.Resources>
        <ResourceDictionary Source="/PRESENTATION_LAYER;component/Resources/Theme.xaml"/>
    </Window.Resources>

    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="240">

            <!-- Title -->
            <TextBlock Text="Task Type"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="{DynamicResource TextPrimaryBrush}"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,25"/>

            <!-- Name -->
            <StackPanel Margin="0,0,0,12">
                <TextBlock Text="Task Type Name"
                           Foreground="{DynamicResource TextPrimaryBrush}"
                           FontSize="13"
                           Margin="0,0,0,4"/>
                <Border CornerRadius="6"
                        Background="{DynamicResource CardBackgroundBrush}"
                        Padding="1">
                    <TextBox x:Name="tbName"
                             Height="32"
                             Background="{DynamicResource CardBackgroundBrush}"
                             Foreground="{DynamicResource TextPrimaryBrush}"
                             BorderThickness="0"
                             Padding="6"
                             MaxLength="50" Margin="0.2,4,0.2,12"/>
                </Border>
            </StackPanel>

            <!-- Description -->
            <StackPanel Margin="0,0,0,12">
                <TextBlock Text="Description"
                           Foreground="{DynamicResource TextPrimaryBrush}"
                           FontSize="13"
                           Margin="0,0,0,4"/>
                <Border CornerRadius="6"
                        Background="{DynamicResource CardBackgroundBrush}"
                        Padding="1">
                    <TextBox x:Name="tbDescription"
                             Height="70"
                             Background="{DynamicResource CardBackgroundBrush}"
                             Foreground="{DynamicResource TextPrimaryBrush}"
                             BorderThickness="0"
                             Padding="6"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             MaxLength="150"/>
                </Border>
            </StackPanel>

            <!-- Color -->
            <StackPanel Margin="0,0,0,12">
                <TextBlock Text="Color (Hex or Name)"
                           Foreground="{DynamicResource TextPrimaryBrush}"
                           FontSize="13"
                           Margin="0,0,0,4"/>
                <Border CornerRadius="6"
                        Background="{DynamicResource CardBackgroundBrush}"
                        Padding="1">
                    <TextBox x:Name="tbColor"
                             Height="28"
                             Background="{DynamicResource CardBackgroundBrush}"
                             Foreground="{DynamicResource TextPrimaryBrush}"
                             BorderThickness="0"
                             Padding="6"
                             MaxLength="20"
                             ToolTip="Example: #FF4C6EF5 or Red"/>
                </Border>
            </StackPanel>

            <!-- Date Of Creation -->
            <StackPanel Margin="0,0,0,15">
                <TextBlock Text="Date Of Creation"
                           Foreground="{DynamicResource TextDisabledBrush}"
                           FontSize="13"
                           Margin="0,0,0,4"/>
                <Border CornerRadius="6"
                        Background="{DynamicResource CardBackgroundBrush}"
                        Padding="1">
                    <TextBox x:Name="tbDateOfCreation"
                             Height="28"
                             Background="{DynamicResource CardBackgroundBrush}"
                             Foreground="{DynamicResource TextDisabledBrush}"
                             BorderThickness="0"
                             Padding="6"
                             IsReadOnly="True"/>
                </Border>
            </StackPanel>

            <!-- Save Button -->
            <Button x:Name="btnSave"
                    Content="Save"
                    Style="{StaticResource PrimaryButton}"
                    Click="btnSave_Click"/>

        </StackPanel>
    </Grid>
</Window>