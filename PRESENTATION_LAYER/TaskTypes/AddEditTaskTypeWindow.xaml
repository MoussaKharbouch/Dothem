<Window x:Class="PRESENTATION_LAYER.AddEditTaskTypeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dothem - Task Type Form"
        Height="489" Width="400"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Opacity="0.98"
        WindowStyle="SingleBorderWindow"
        Icon="/App_Icon.png">

    <Window.Resources>

        <!-- Theme Colors -->
        <SolidColorBrush x:Key="AccentBrush" Color="#FF2B34AF"/>
        <SolidColorBrush x:Key="AccentHoverBrush" Color="#FF22308F"/>

        <!-- Accent Button -->
        <Style x:Key="AccentButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Margin" Value="0,16,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="b"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="b"
                                        Property="Background"
                                        Value="{StaticResource AccentHoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="b"
                                        Property="Opacity"
                                        Value="0.88"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Inputs Style -->
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="28"/>
            <Setter Property="Margin" Value="0,4,0,12"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

    </Window.Resources>

    <Grid Margin="16">
        <StackPanel>

            <!-- Title -->
            <TextBlock Text="Task Type Form"
                       FontSize="24"
                       FontWeight="SemiBold"
                       Foreground="{StaticResource AccentBrush}"
                       Margin="0,0,0,16"/>

            <!-- Name -->
            <TextBlock Text="Task Type Name:"/>
            <TextBox x:Name="tbName"
                     MaxLength="50"
                     Height="33"/>

            <!-- Description -->
            <TextBlock Text="Description:"/>
            <TextBox x:Name="tbDescription"
                     Height="80"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     MaxLength="150"/>

            <!-- Color -->
            <TextBlock Text="Color (Hex or Name):"/>
            <TextBox x:Name="tbColor"
                     MaxLength="20"
                     ToolTip="Example: #FF2B34AF or Red"/>

            <!-- Date Of Creation (Read Only) -->
            <TextBlock Text="Date Of Creation:"/>
            <TextBox x:Name="tbDateOfCreation"
                     IsReadOnly="True"
                     Background="#FFEFEFEF" Height="35"/>

            <!-- Save Button -->
            <Button x:Name="btnSave"
                    Content="Save"
                    Style="{StaticResource AccentButton}"
                    Click="btnSave_Click"/>

        </StackPanel>
    </Grid>
</Window>