<Window x:Class="PRESENTATION_LAYER.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PRESENTATION_LAYER"
        mc:Ignorable="d"
        Title="Dothem" Height="500" Width="800" Icon="/App_Icon.png" Opacity="0.98" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <!-- Theme brushes -->
        <SolidColorBrush x:Key="AccentBrush" Color="#FF2B34AF"/>
        <SolidColorBrush x:Key="AccentHoverBrush" Color="#FF22308F"/>
        <SolidColorBrush x:Key="PanelDarkBrush" Color="#FF2F3A4F"/>
        <SolidColorBrush x:Key="PanelLightBrush" Color="#FFF5F7FA"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="WhiteSmoke"/>

        <!-- Base flat button -->
        <Style x:Key="FlatButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="6,0,6,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="b"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect Color="#22000000" BlurRadius="8" ShadowDepth="2"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="b" Property="Background" Value="{StaticResource AccentHoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="b" Property="Opacity" Value="0.88"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="b" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Small icon button for toolbar (kept but not used) -->
        <Style x:Key="IconButton" TargetType="Button" BasedOn="{StaticResource FlatButton}">
            <Setter Property="Width" Value="36"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="b" Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="b" Property="Background" Value="#FFF0F4FF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="b" Property="Opacity" Value="0.9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Variants for other larger buttons (kept for other areas) -->
        <Style x:Key="InfoButton" TargetType="Button" BasedOn="{StaticResource FlatButton}">
            <Setter Property="Background" Value="#FF4A90E2"/>
            <Setter Property="MinWidth" Value="86"/>
        </Style>
        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource FlatButton}">
            <Setter Property="Background" Value="#FFD9534F"/>
            <Setter Property="MinWidth" Value="86"/>
        </Style>
        <Style x:Key="MutedButton" TargetType="Button" BasedOn="{StaticResource FlatButton}">
            <Setter Property="Background" Value="#FF6C757D"/>
            <Setter Property="MinWidth" Value="86"/>
        </Style>

        <!-- Floating action button (circular plus) - simplified: no shadow -->
        <Style x:Key="FabButton" TargetType="Button">
            <Setter Property="Width" Value="56"/>
            <Setter Property="Height" Value="56"/>
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Bottom"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <!-- simple circular button without DropShadowEffect -->
                        <Grid>
                            <Border x:Name="b"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="28"
                                    Width="{TemplateBinding Width}"
                                    Height="{TemplateBinding Height}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="b" Property="Background" Value="{StaticResource AccentHoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="b" Property="Opacity" Value="0.9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Task type ListBox item style -->
        <Style x:Key="TaskTypeItemStyle" TargetType="ListBoxItem">
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Margin" Value="6,4"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" CornerRadius="6">
                            <Grid Margin="4">
                                <ContentPresenter VerticalAlignment="Center" />
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#FFF0F4FF"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{StaticResource AccentBrush}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="{StaticResource PanelLightBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="167*"/>
            <ColumnDefinition Width="633*"/>
        </Grid.ColumnDefinitions>

        <!-- Left navigation / types column -->
        <Border Grid.Column="0" BorderBrush="Black" BorderThickness="1"
                Background="{StaticResource PanelDarkBrush}" CornerRadius="0,2,2,0" Padding="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="102"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Background="Transparent">
                    <TextBlock Text="Task Types"
                               FontFamily="Segoe UI Semibold"
                               FontSize="22"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               TextAlignment="Center"/>
                </Border>

                <!-- Task types ListBox -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,8,0,0" Focusable="False">
                    <ListBox x:Name="TaskTypesListBox"
                             Background="Transparent"
                             BorderThickness="0"
                             ItemContainerStyle="{StaticResource TaskTypeItemStyle}"
                             SelectionMode="Single"
                             Focusable="False">
                    </ListBox>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Main tasks area -->
        <Border Grid.Column="1" Margin="12,0,12,0" Background="White" CornerRadius="6" BorderBrush="#FFE6E9F0" BorderThickness="1" Padding="12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header: use Grid so toolbar is spaced away from title -->
                <Grid Grid.Row="0" Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="Tasks" FontSize="20" FontWeight="SemiBold" VerticalAlignment="Center" />

                    <!-- toolbar removed: buttons deleted per request -->
                </Grid>

                <!-- Content: tasks list full width -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Background="#FFF9FAFC" CornerRadius="4" Padding="8" BorderBrush="#FFE6E9F0" BorderThickness="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="All Tasks" FontWeight="Bold" Foreground="#333" Margin="4" />

                            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,8,0,0">
                                <StackPanel x:Name="TasksPanel" Orientation="Vertical" Margin="0,0,0,8"/>
                            </ScrollViewer>
                        </Grid>
                    </Border>
                </Grid>

                <!-- Floating Add Task (FAB) anchored bottom-right, simplified (no shadow) -->
                <Button Style="{StaticResource FabButton}" Content="+" Width="56" Height="56"
                        ToolTip="Add Task"
                        Margin="0,0,16,16"
                        Grid.RowSpan="2" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="Button_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>