<Window x:Class="PRESENTATION_LAYER.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dothem"
        Height="540"
        Width="950"
        Background="#FF1E1E2F"
        WindowStartupLocation="CenterScreen"
        Icon="/App_Icon.png"
        Loaded="Window_Loaded">

    <Window.Resources>

        <!-- COLORS -->
        <SolidColorBrush x:Key="SidebarBrush" Color="#FF24243A"/>
        <SolidColorBrush x:Key="CardBrush" Color="#FF2B2B50"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#FF4C6EF5"/>
        <SolidColorBrush x:Key="AccentHoverBrush" Color="#FF6D85FF"/>
        <SolidColorBrush x:Key="DangerBrush" Color="#FFE25555"/>

        <!-- MODERN CIRCULAR BUTTON -->
        <Style x:Key="CircularButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="36"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="b"
                                Background="{TemplateBinding Background}"
                                CornerRadius="18">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="b" Property="Background" Value="{StaticResource AccentHoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="b" Property="Opacity" Value="0.85"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TASK TYPE ITEM STYLE -->
        <Style TargetType="ListBoxItem">
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                CornerRadius="12"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="White"/>
                                <Setter TargetName="Bd" Property="BorderThickness" Value="2"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR -->
        <Border Grid.Column="0"
                Background="{StaticResource SidebarBrush}"
                Padding="15"
                CornerRadius="12">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Task Types"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,10,0,20"/>

                <Border Grid.Row="1"
                        Background="{StaticResource CardBrush}"
                        CornerRadius="10"
                        Padding="8">

                    <Grid>
                        <ListBox x:Name="lbTaskTypes"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 SelectionChanged="lbTaskTypes_SelectionChanged"/>

                        <TextBlock x:Name="tbNoTaskTypes"
                                   Text="No task types available"
                                   Foreground="#AAAAAA"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Grid>
                </Border>

                <!-- SIDEBAR BUTTONS CIRCULAR -->
                <StackPanel Grid.Row="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,15,0,0">

                    <Button x:Name="btnAddTaskType"
                            Content="+"
                            Style="{StaticResource CircularButton}"
                            Click="btnAddTaskType_Click"/>

                    <Button x:Name="btnEditTaskType"
                            Content="✎"
                            Style="{StaticResource CircularButton}"
                            Margin="8,0"
                            Click="btnEditTaskType_Click"/>

                    <Button x:Name="btnDeleteTaskType"
                            Content="🗑"
                            Style="{StaticResource CircularButton}"
                            Background="{StaticResource DangerBrush}"
                            Click="btnDeleteTaskType_Click"/>
                </StackPanel>

            </Grid>
        </Border>

        <!-- MAIN CONTENT -->
        <Border Grid.Column="1"
                Margin="20"
                Background="{StaticResource CardBrush}"
                CornerRadius="12"
                Padding="20">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <TextBlock Text="Tasks"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="White"
                           Margin="0,0,0,15"/>

                <Border Grid.Row="1"
                        Background="#FF1E1E2F"
                        CornerRadius="12"
                        Padding="15">

                    <Grid>
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel x:Name="spTasks"/>
                        </ScrollViewer>

                        <TextBlock x:Name="tbNoTasks"
                                   Text="No tasks available"
                                   Foreground="#AAAAAA"
                                   FontSize="16"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Grid>
                </Border>

                <!-- FLOATING ADD BUTTON CIRCULAR -->
                <Button x:Name="btnAddTask"
                        Content="+"
                        Style="{StaticResource CircularButton}"
                        Width="40"
                        Height="40"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Margin="0,0,15,15"
                        Click="btnAddTask_Click"/>
            </Grid>
        </Border>

    </Grid>
</Window>