<Window x:Class="PRESENTATION_LAYER.AddEditTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dothem - Task"
        Height="600"
        Width="340"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#FF1E1E2F"
        Icon="/App_Icon.png"
        Opacity="0.98">

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Hidden">
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Width="260"
                        Margin="0,30,0,20">

                <!-- Title -->
                <TextBlock Text="Task Details"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,25"/>

                <!-- Task Name -->
                <StackPanel Margin="0,0,0,12">
                    <TextBlock Text="Task Name"
                               Foreground="White"
                               FontSize="13"
                               Margin="0,0,0,4"/>
                    <Border CornerRadius="6"
                            Background="#FF2B2B50"
                            Padding="1">
                        <TextBox x:Name="tbTaskName"
                                 Height="28"
                                 Background="#FF2B2B50"
                                 Foreground="White"
                                 BorderThickness="0"
                                 Padding="6"
                                 MaxLength="50"/>
                    </Border>
                </StackPanel>

                <!-- Description -->
                <StackPanel Margin="0,0,0,12">
                    <TextBlock Text="Description"
                               Foreground="White"
                               FontSize="13"
                               Margin="0,0,0,4"/>
                    <Border CornerRadius="6"
                            Background="#FF2B2B50"
                            Padding="1">
                        <TextBox x:Name="tbDescription"
                                 Height="70"
                                 Background="#FF2B2B50"
                                 Foreground="White"
                                 BorderThickness="0"
                                 Padding="6"
                                 AcceptsReturn="True"
                                 TextWrapping="Wrap"
                                 MaxLength="150"/>
                    </Border>
                </StackPanel>

                <!-- Status -->
                <StackPanel Margin="0,0,0,12">
                    <TextBlock Text="Status"
                               Foreground="White"
                               FontSize="13"
                               Margin="0,0,0,4"/>
                    <ComboBox x:Name="cbStatus"
                              Height="30"
                              SelectedIndex="0">
                        <ComboBoxItem Content="Not Started" Tag="1"/>
                        <ComboBoxItem Content="Completed" Tag="2"/>
                    </ComboBox>
                </StackPanel>

                <!-- Priority -->
                <StackPanel Margin="0,0,0,12">
                    <TextBlock Text="Priority Level"
                               Foreground="White"
                               FontSize="13"
                               Margin="0,0,0,4"/>
                    <ComboBox x:Name="cbPriority"
                              Height="30"
                              SelectedIndex="1">
                        <ComboBoxItem Content="Low" Tag="0"/>
                        <ComboBoxItem Content="Medium" Tag="1"/>
                        <ComboBoxItem Content="High" Tag="2"/>
                    </ComboBox>
                </StackPanel>

                <!-- Due Date -->
                <StackPanel Margin="0,0,0,12">
                    <TextBlock Text="Due Date"
                               Foreground="White"
                               FontSize="13"
                               Margin="0,0,0,4"/>
                    <DatePicker x:Name="dpDueDate"
                                Height="30"/>
                </StackPanel>

                <!-- Task Type -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Task Type"
                               Foreground="White"
                               FontSize="13"
                               Margin="0,0,0,4"/>
                    <ComboBox x:Name="cbTaskType"
                              Height="30"/>
                </StackPanel>

                <!-- Save Button -->
                <Button x:Name="btnSave"
                        Content="Save Task"
                        Height="34"
                        FontSize="15"
                        FontWeight="Bold"
                        Background="#FF4C6EF5"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="btnSave_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#FF4C6EF5"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="8">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF6D85FF"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>