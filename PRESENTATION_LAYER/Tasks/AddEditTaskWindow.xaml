<Window x:Class="PRESENTATION_LAYER.AddEditTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dothem - Task Form" Height="588" Width="400"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Opacity="0.98" WindowStyle="SingleBorderWindow"
        Icon="/App_Icon.png">

    <Window.Resources>
        <!-- Theme Colors -->
        <SolidColorBrush x:Key="PanelLightBrush" Color="#FFF5F7FA"/>
        <SolidColorBrush x:Key="PanelDarkBrush" Color="#FF2F3A4F"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#FF2B34AF"/>
        <SolidColorBrush x:Key="AccentHoverBrush" Color="#FF22308F"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="Black"/>

        <!-- Save Button Style -->
        <Style x:Key="AccentButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Margin" Value="0,16,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="b" Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="b" Property="Background" Value="{StaticResource AccentHoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="b" Property="Opacity" Value="0.88"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TextBox / ComboBox / DatePicker Styles -->
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="28"/>
            <Setter Property="Margin" Value="0,4,0,12"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Height" Value="28"/>
            <Setter Property="Margin" Value="0,4,0,12"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style TargetType="DatePicker">
            <Setter Property="Height" Value="28"/>
            <Setter Property="Margin" Value="0,4,0,12"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>
    </Window.Resources>

    <Grid Margin="16">
        <StackPanel>
            <TextBlock Text="Task Form" FontSize="24" FontWeight="SemiBold" Foreground="{StaticResource AccentBrush}" Margin="0,0,0,16"/>

            <!-- Task Name -->
            <TextBlock Text="Task Name:"/>
            <TextBox x:Name="tbTaskName" MaxLength="50" Height="33"/>

            <!-- Task Description -->
            <TextBlock Text="Description:"/>
            <TextBox x:Name="tbDescription" Height="80" AcceptsReturn="True" TextWrapping="Wrap" MaxLength="150"/>

            <!-- Status -->
            <TextBlock Text="Status:"/>
            <ComboBox x:Name="cbStatus" SelectedIndex="0">
                <ComboBoxItem Content="Not Started" Tag="1"/>
                <ComboBoxItem Content="Completed" Tag="2"/>
            </ComboBox>

            <!-- Priority -->
            <TextBlock Text="Priority Level:"/>
            <ComboBox x:Name="cbPriority" SelectedIndex="1">
                <ComboBoxItem Content="Low" Tag="0"/>
                <ComboBoxItem Content="Medium" Tag="1"/>
                <ComboBoxItem Content="High" Tag="2"/>
            </ComboBox>

            <!-- Due Date -->
            <TextBlock Text="Due Date:"/>
            <DatePicker x:Name="dpDueDate" Height="32"/>

            <!-- Task Type -->
            <TextBlock Text="Task Type:"/>
            <ComboBox x:Name="cbTaskType"/>

            <!-- Save Button -->
            <Button x:Name="btnSave" Content="Save" Style="{StaticResource AccentButton}" Click="btnSave_Click"/>
        </StackPanel>
    </Grid>
</Window>