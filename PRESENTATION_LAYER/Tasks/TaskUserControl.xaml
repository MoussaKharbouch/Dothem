<UserControl x:Class="PRESENTATION_LAYER.TaskUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PRESENTATION_LAYER"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="350"
             MinHeight="80"
             VerticalAlignment="Top" Loaded="UserControl_Loaded">

    <Border CornerRadius="8" Background="White" BorderBrush="#FFE6E9F0" BorderThickness="1" Padding="12" Margin="6">
        <Border.Effect>
            <DropShadowEffect Color="#22000000" BlurRadius="8" ShadowDepth="2"/>
        </Border.Effect>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Checkbox for completion -->
            <CheckBox x:Name="chkCompleted" VerticalAlignment="Top" Margin="0,4,12,0" Click="chkCompleted_Click"/>

            <!-- Left: Task Info -->
            <StackPanel Grid.Column="1" Orientation="Vertical" VerticalAlignment="Top">
                <TextBlock x:Name="tbTaskName" Text="Task Name" FontSize="16" FontWeight="SemiBold" Foreground="#333"/>
                <TextBlock x:Name="tbDescription" Text="Task description goes here..." FontSize="12" Foreground="#666" TextWrapping="Wrap" Margin="0,4,0,0"/>
            </StackPanel>

            <!-- Right: Optional icons -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                <Button x:Name="btnEdit" Content="✏️" Width="28" Height="28" Background="#FF2B34AF" Foreground="White" BorderThickness="0" Cursor="Hand" Margin="0,0,6,0" Click="btnEdit_Click"/>
                <Button x:Name="btnDelete" Content="🗑️" Width="28" Height="28" Background="#FFEE5C5C" Foreground="White" BorderThickness="0" Cursor="Hand" Click="btnDelete_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
