<UserControl x:Class="PRESENTATION_LAYER.TaskUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PRESENTATION_LAYER"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="350"
             MinHeight="80"
             VerticalAlignment="Top"
             Loaded="UserControl_Loaded">

    <Border CornerRadius="12" Background="#FF2B2B50" BorderBrush="#FF3A3A60" BorderThickness="1" Padding="12" Margin="6">
        <Border.Effect>
            <DropShadowEffect Color="#22000000" BlurRadius="6" ShadowDepth="2"/>
        </Border.Effect>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Checkbox for completion -->
            <CheckBox x:Name="chkCompleted"
                      VerticalAlignment="Center"
                      Margin="0,0,12,0"
                      Width="20"
                      Height="20"
                      Background="#FF4C6EF5"
                      Foreground="White"
                      BorderThickness="0"
                      Click="chkCompleted_Click"/>

            <!-- Left: Task Info -->
            <StackPanel Grid.Column="1" Orientation="Vertical" VerticalAlignment="Center">
                <TextBlock x:Name="tbTaskName"
                           Text="Task Name"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="White"/>
                <TextBlock x:Name="tbDescription"
                           Text="Task description goes here..."
                           FontSize="12"
                           Foreground="#CCCCCC"
                           TextWrapping="Wrap"
                           Margin="0,4,0,0"/>
            </StackPanel>

            <!-- Right: Optional icons -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">

                <!-- EDIT BUTTON -->
                <Button x:Name="btnEdit"
            Width="28" Height="28"
            Margin="0,0,6,0"
            Cursor="Hand"
            Click="btnEdit_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="b" Width="28" Height="28" CornerRadius="14" Background="#FF4C6EF5">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="b" Property="Background" Value="#FF6D85FF"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="b" Property="Opacity" Value="0.85"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter TargetName="b" Property="Opacity" Value="0.5"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                    <TextBlock Text="✏️" Foreground="White" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Button>

                <!-- DELETE BUTTON -->
                <Button x:Name="btnDelete"
            Width="28" Height="28"
            Cursor="Hand"
            Click="btnDelete_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="b" Width="28" Height="28" CornerRadius="14" Background="#FFEE5C5C">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="b" Property="Background" Value="#FFFF7070"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="b" Property="Opacity" Value="0.85"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter TargetName="b" Property="Opacity" Value="0.5"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                    <TextBlock Text="🗑️" Foreground="White" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Button>

            </StackPanel>
        </Grid>
    </Border>
</UserControl>