<UserControl x:Class="PRESENTATION_LAYER.Tasks.TaskUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PRESENTATION_LAYER"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="350"
             MinHeight="80"
             VerticalAlignment="Top"
             Loaded="UserControl_Loaded">

    <!-- Outer Card -->
    <Border CornerRadius="12"
            Background="{DynamicResource CardBackgroundBrush}"
            BorderBrush="{DynamicResource PrimaryBrush}"
            BorderThickness="1"
            Padding="12"
            Margin="6">
        <Border.Effect>
            <DropShadowEffect Color="#22000000" BlurRadius="6" ShadowDepth="2"/>
        </Border.Effect>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Checkbox for completion -->
            <CheckBox x:Name="chkCompleted"
                      VerticalAlignment="Center"
                      Margin="0,0,12,0"
                      Width="20"
                      Height="20"
                      Background="{DynamicResource PrimaryBrush}"
                      Foreground="{DynamicResource TextPrimaryBrush}"
                      BorderThickness="0"
                      Click="chkCompleted_Click"/>

            <!-- Left: Task Info -->
            <StackPanel Grid.Column="1" Orientation="Vertical" VerticalAlignment="Center">
                <TextBlock x:Name="tbTaskName"
                           Text="Task Name"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource TextPrimaryBrush}"/>
                <TextBlock x:Name="tbDescription"
                           Text="Task description goes here..."
                           FontSize="12"
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           TextWrapping="Wrap"
                           Margin="0,4,0,0"/>
            </StackPanel>

            <!-- Right: Action Buttons -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                <!-- Edit Button -->
                <Button x:Name="btnEdit"
                        Width="28" Height="28"
                        Cursor="Hand"
                        Margin="0,0,6,0"
                        Click="btnEdit_Click"
                        Style="{StaticResource CircularButton}">
                    <TextBlock Text="✏️"
                               Foreground="{DynamicResource TextPrimaryBrush}"
                               FontSize="14"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>
                </Button>

                <!-- Delete Button -->
                <Button x:Name="btnDelete"
                        Width="28" Height="28"
                        Cursor="Hand"
                        Click="btnDelete_Click"
                        Background="{DynamicResource DangerBrush}"
                        Style="{StaticResource CircularButton}">
                    <TextBlock Text="🗑️"
                               Foreground="{DynamicResource TextPrimaryBrush}"
                               FontSize="14"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>