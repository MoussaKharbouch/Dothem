<Window x:Class="PRESENTATION_LAYER.Users.SignUpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sign Up"
        Height="500" Width="268"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Opacity="0.95"
        WindowStyle="SingleBorderWindow"
        Icon="/App_Icon.png">
    <Grid Background="#FF2B34AF">
        <Label Content="Sign Up" HorizontalAlignment="Center" Margin="0,40,0,0" FontFamily="Segoe UI Semibold" FontSize="48" VerticalAlignment="Top" Foreground="WhiteSmoke"/>

        <TextBlock Text="Username:" Margin="27,130,0,0" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="WhiteSmoke"/>
        <TextBox x:Name="tbUsername" HorizontalAlignment="Center" Height="24" Margin="0,150,0,0" VerticalAlignment="Top" Width="214" MaxLength="15"/>

        <TextBlock Text="Password:" Margin="27,190,0,0" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="WhiteSmoke"/>
        <PasswordBox x:Name="pbPassword" HorizontalAlignment="Center" Height="24" Margin="0,210,0,0" VerticalAlignment="Top" Width="214" MaxLength="20"/>

        <TextBlock Text="Confirm Password:" Margin="27,250,0,0" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="WhiteSmoke"/>
        <PasswordBox x:Name="pbConfirmPassword" HorizontalAlignment="Center" Height="24" Margin="0,270,0,0" VerticalAlignment="Top" Width="214" MaxLength="20"/>

        <Button x:Name="btnRegister" Content="Register" HorizontalAlignment="Center" Margin="0,330,0,0" VerticalAlignment="Top" Width="100" Height="30" FontSize="16" Click="btnSignUp_Click"/>
    </Grid>
</Window>
