<Window x:Class="PRESENTATION_LAYER.Users.SignUpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sign Up"
        Height="500"
        Width="280"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource WindowBackgroundBrush}"
        Opacity="0.98"
        WindowStyle="SingleBorderWindow"
        Icon="/App_Icon.png">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="220">

            <!-- Title -->
            <TextBlock Text="Sign Up"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="{DynamicResource TextPrimaryBrush}"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       Margin="0,0,0,20"/>

            <!-- Username -->
            <StackPanel Margin="0,0,0,10">
                <TextBlock Text="Username" Foreground="{DynamicResource TextPrimaryBrush}" FontSize="13" Margin="0,0,0,4"/>
                <Border CornerRadius="6" Background="{DynamicResource CardBackgroundBrush}" Padding="1">
                    <TextBox x:Name="tbUsername"
                             Width="220"
                             Height="26"
                             FontSize="13"
                             Background="{DynamicResource CardBackgroundBrush}"
                             Foreground="{DynamicResource TextPrimaryBrush}"
                             BorderThickness="0"
                             MaxLength="15"
                             Padding="4"/>
                </Border>
            </StackPanel>

            <!-- Password -->
            <StackPanel Margin="0,0,0,10">
                <TextBlock Text="Password" Foreground="{DynamicResource TextPrimaryBrush}" FontSize="13" Margin="0,0,0,4"/>
                <Border CornerRadius="6" Background="{DynamicResource CardBackgroundBrush}" Padding="1">
                    <PasswordBox x:Name="pbPassword"
                                 Width="220"
                                 Height="26"
                                 FontSize="13"
                                 Background="{DynamicResource CardBackgroundBrush}"
                                 Foreground="{DynamicResource TextPrimaryBrush}"
                                 BorderThickness="0"
                                 MaxLength="20"
                                 Padding="4"/>
                </Border>
            </StackPanel>

            <!-- Confirm Password -->
            <StackPanel Margin="0,0,0,15">
                <TextBlock Text="Confirm Password" Foreground="{DynamicResource TextPrimaryBrush}" FontSize="13" Margin="0,0,0,4"/>
                <Border CornerRadius="6" Background="{DynamicResource CardBackgroundBrush}" Padding="1">
                    <PasswordBox x:Name="pbConfirmPassword"
                                 Width="220"
                                 Height="26"
                                 FontSize="13"
                                 Background="{DynamicResource CardBackgroundBrush}"
                                 Foreground="{DynamicResource TextPrimaryBrush}"
                                 BorderThickness="0"
                                 MaxLength="20"
                                 Padding="4"/>
                </Border>
            </StackPanel>

            <!-- Register Button -->
            <Button x:Name="btnRegister"
                    Content="Register"
                    Width="220"
                    Height="32"
                    FontSize="15"
                    FontWeight="Bold"
                    Style="{DynamicResource PrimaryButton}"
                    Margin="0,10,0,8"
                    Click="btnSignUp_Click"/>

            <!-- Back to Login link -->
            <TextBlock x:Name="tbBackToLogin"
                       Text="Already have an account? Sign In"
                       Foreground="{DynamicResource TextPrimaryBrush}"
                       FontSize="13"
                       HorizontalAlignment="Center"
                       Cursor="Hand"
                       TextDecorations="Underline"
                       MouseLeftButtonDown="tbBackToLogin_MouseLeftButtonDown"
                       Margin="0,5,0,0"/>
        </StackPanel>
    </Grid>
</Window>