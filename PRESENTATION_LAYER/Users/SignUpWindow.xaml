<Window x:Class="PRESENTATION_LAYER.Users.SignUpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sign Up"
        Height="500"
        Width="280"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="#FF1E1E2F"
        Opacity="0.98"
        WindowStyle="SingleBorderWindow"
        Icon="/App_Icon.png">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="220">

            <!-- Title -->
            <TextBlock Text="Sign Up"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       Margin="0,0,0,20"/>

            <!-- Username -->
            <StackPanel Margin="0,0,0,10">
                <TextBlock Text="Username" Foreground="White" FontSize="13" Margin="0,0,0,4"/>
                <Border CornerRadius="6" Background="#FF2B2B50" Padding="1">
                    <TextBox x:Name="tbUsername"
                             Width="220"
                             Height="26"
                             FontSize="13"
                             Background="#FF2B2B50"
                             Foreground="White"
                             BorderThickness="0"
                             MaxLength="15"
                             Padding="4"/>
                </Border>
            </StackPanel>

            <!-- Password -->
            <StackPanel Margin="0,0,0,10">
                <TextBlock Text="Password" Foreground="White" FontSize="13" Margin="0,0,0,4"/>
                <Border CornerRadius="6" Background="#FF2B2B50" Padding="1">
                    <PasswordBox x:Name="pbPassword"
                                 Width="220"
                                 Height="26"
                                 FontSize="13"
                                 Background="#FF2B2B50"
                                 Foreground="White"
                                 BorderThickness="0"
                                 MaxLength="20"
                                 Padding="4"/>
                </Border>
            </StackPanel>

            <!-- Confirm Password -->
            <StackPanel Margin="0,0,0,15">
                <TextBlock Text="Confirm Password" Foreground="White" FontSize="13" Margin="0,0,0,4"/>
                <Border CornerRadius="6" Background="#FF2B2B50" Padding="1">
                    <PasswordBox x:Name="pbConfirmPassword"
                                 Width="220"
                                 Height="26"
                                 FontSize="13"
                                 Background="#FF2B2B50"
                                 Foreground="White"
                                 BorderThickness="0"
                                 MaxLength="20"
                                 Padding="4"/>
                </Border>
            </StackPanel>

            <!-- Register Button -->
            <Button x:Name="btnRegister"
                    Content="Register"
                    Width="220"
                    Height="32"
                    FontSize="15"
                    FontWeight="Bold"
                    Background="#FF4C6EF5"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    Margin="0,10,0,8"
                    Click="btnSignUp_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#FF4C6EF5"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="8">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF6D85FF"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <!-- Back to Login link -->
            <TextBlock x:Name="tbBackToLogin"
                       Text="Already have an account? Sign In"
                       Foreground="White"
                       FontSize="13"
                       HorizontalAlignment="Center"
                       Cursor="Hand"
                       TextDecorations="Underline"
                       MouseLeftButtonDown="tbBackToLogin_MouseLeftButtonDown"
                       Margin="0,5,0,0"/>
        </StackPanel>
    </Grid>
</Window>