<Window x:Class="PRESENTATION_LAYER.Users.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dothem"
        Height="420"
        Width="280"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{DynamicResource WindowBackgroundBrush}"
        Icon="/App_Icon.png"
        Opacity="0.98">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="220">
            <TextBlock Text="Welcome Back" FontSize="24" FontWeight="Bold"
                       Foreground="{StaticResource TextPrimaryBrush}"
                       HorizontalAlignment="Center" TextAlignment="Center" Margin="0,0,0,20"/>

            <StackPanel Margin="0,0,0,10">
                <TextBlock Text="Username" Foreground="{StaticResource TextPrimaryBrush}" FontSize="13" Margin="0,0,0,4"/>
                <TextBox x:Name="tbUsername" Width="220" Height="32"/>
            </StackPanel>

            <StackPanel Margin="0,0,0,10">
                <TextBlock Text="Password" Foreground="{StaticResource TextPrimaryBrush}" FontSize="13" Margin="0,0,0,4"/>
                <PasswordBox x:Name="tbPassword" Width="220" Height="30"/>
            </StackPanel>

            <Button x:Name="btnEnter" Content="Login" Width="220" Style="{StaticResource PrimaryButton}" Margin="0,15,0,10" Click="btnEnter_Click"/>

            <TextBlock x:Name="tbSignUp" Text="Sign Up" Foreground="{StaticResource TextPrimaryBrush}" FontSize="13"
                       HorizontalAlignment="Center" Cursor="Hand" TextDecorations="Underline"
                       MouseLeftButtonDown="tbSignUp_MouseLeftButtonDown"/>
        </StackPanel>
    </Grid>
</Window>